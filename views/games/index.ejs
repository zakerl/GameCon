<% include ../partials/header %> 
<style>
    .no-gutters:hover{
        transform: scale(1.1)
    }

</style>
 <div class="container">
     <header class="jumbotron" style="margin: 0">
         <div class="container">
             <h1 style="text-align: center;color: white">Welcome To GameCon!</h1>
             <p style="text-align: center;color: white">View our hand-picked top games from all over the world</p>
             <p>
                <div class="text-center">
                        <a class="btn btn-secondary btn-large text-center"  href="/gamecon/new">Add New Game</a>
                </div>
             </p>
         </div>
     </header>
     
     <div style="display:flex; flex-wrap: wrap;">
        <% games.forEach(function(game){ %>
        <div class="row">
            <div class="col-12">
                <div class="card mb-3" style="max-width: 100%; margin-bottom: 12px">
                    <div class="d-block">
                        <div class="row no-gutters" style="background-color:#2C5364">
                            <div class="col-md-2">
                            <img src="<%= game.image %>" style="width: 100%; height: 200px" class="card-img" alt="...">
                            </div>
                            <a href="/gamecon/<%=game._id%>">
                                <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title" style="color: white"><%= game.name %></h5>
                                    <p class="card-text" style="color: white">Posted by <%=game.author.username%> on <%=game.created.toDateString()%></p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
